@page "/login"
@inject NavigationManager Nav

<div class="page-center">
    <div class="login-container">

        <h2>Unlock Journal</h2>
        <p class="subtitle">Enter your PIN to continue</p>

        <input type="password"
               class="pin-input"
               maxlength="4"
               placeholder="••••"
               @bind="Pin" />

        <button class="gradient-btn"
                @onclick="Unlock">
            Unlock Journal
        </button>

        <p class="privacy-text">
            Your journal is private and secure 🔒
        </p>

    </div>
</div>

@code {
    string Pin = "";

    void Unlock()
    {
        // TEMP logic (we’ll improve later)
        if (Pin == "1234")
        {
            Nav.NavigateTo("/dashboard");
        }
    }
}
